<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <data>

        <import type="android.view.View" />

        <variable
            name="item"
            type="com.customer.bms.model.stock.ProductsResponse" />

        <variable
            name="onItemClick"
            type="android.view.View.OnClickListener" />


    </data>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_3sdp"
        android:orientation="vertical">


        <androidx.cardview.widget.CardView
            android:id="@+id/sdfdsfds"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="@{onItemClick}"
            app:cardCornerRadius="@dimen/_10sdp"
            app:cardUseCompatPadding="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/date_txt">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="@dimen/_8sdp"
                android:paddingTop="@dimen/_8sdp"
                android:paddingRight="@dimen/_8sdp"
                android:paddingBottom="@dimen/_8sdp">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="@dimen/_75sdp"
                        android:layout_height="@dimen/_85sdp"
                        app:srcCompat="@drawable/ic_errorimg" />

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/_6sdp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/productname"
                            style="@style/Ag_metadata_500"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_4sdp"
                            android:text="@{item.product_Desc}"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_12sdp"
                            tools:text="Product xyz" />

                        <TextView
                            android:id="@+id/unitprice"
                            style="@style/AG_regular"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_4sdp"
                            android:layout_marginTop="@dimen/_4sdp"
                            android:text="@{`Unit price  :`  + item.selling_Price}"
                            android:textColor="@color/color_CCCCCC"
                            android:textSize="@dimen/_12sdp"
                            tools:text="Unit price  : 10" />


                        <TextView
                            android:id="@+id/instock"
                            style="@style/AG_regular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_4sdp"
                            android:gravity="bottom"
                            android:text="In Stock"
                            android:textColor="@color/primary"
                            android:textSize="@dimen/_12sdp" />


                    </androidx.appcompat.widget.LinearLayoutCompat>


                </androidx.appcompat.widget.LinearLayoutCompat>

                <CheckBox
                    android:id="@+id/productselected"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:checked="@={item.selected}"
                    android:text=""/>
            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.cardview.widget.CardView>
    </androidx.appcompat.widget.LinearLayoutCompat>


</layout>