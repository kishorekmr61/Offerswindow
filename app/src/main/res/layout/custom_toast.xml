<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/toast_parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:background="@drawable/round_toast"
    android:gravity="bottom"
    android:orientation="horizontal">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_toast"
        android:layout_width="@dimen/_15sdp"
        android:layout_height="@dimen/_15sdp"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/_8sdp"
        android:src="@drawable/ic_pending" />

    <TextView
        android:id="@+id/toast_msg"
        style="@style/AG_regular"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/_6sdp"
        android:padding="@dimen/_3sdp"
        android:layout_weight="0.8"
        android:textColor="@android:color/white"
        tools:text="Location has been added to your favourites.Location has been added to your favourites." />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/ok_txt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_8sdp"
        android:text="Okay"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_weight="0.2"
        android:textStyle="bold"
        android:textColor="@color/white" />

</LinearLayout>