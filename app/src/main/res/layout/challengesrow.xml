<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="item"
            type="com.customer.bms.model.challenges.ChallengeData" />

        <variable
            name="onItemClick"
            type="android.view.View.OnClickListener" />


    </data>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_challenges_list_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_2sdp"
        android:onClick="@{onItemClick}"
        app:cardCornerRadius="@dimen/_10sdp"
        app:cardUseCompatPadding="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/challenges_lyout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="@dimen/_12sdp"
            android:paddingTop="@dimen/_12sdp"
            android:paddingRight="@dimen/_12sdp"
            android:paddingBottom="@dimen/_12sdp">


            <TextView
                android:id="@+id/challengetitle_txt"
                style="@style/Ag_body_large"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{item.challange_Name}"
                android:textColor="@color/black"
                android:textSize="@dimen/_10ssp"
                tools:text="@string/coach" />

            <TextView
                android:id="@+id/challengedesc_txt"
                style="@style/AG_regular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_4sdp"
                android:gravity="start"
                android:text="@{item.challenge_Desc}"
                android:textColor="@color/color_A7AEB1"
                android:textSize="@dimen/_12ssp"
                tools:text="@string/coach" />
        </androidx.appcompat.widget.LinearLayoutCompat>


    </androidx.cardview.widget.CardView>

</layout>