<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <data>

        <variable
            name="item"
            type="com.customer.offerswindow.model.StockPurchaseModel" />

        <variable
            name="onItemClick"
            type="android.view.View.OnClickListener" />

        <import type="android.view.View" />
    </data>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_3sdp"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/date_txt"
            style="@style/AG_regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:paddingEnd="@dimen/_8sdp"
            android:text="@{item.date}"
            android:textColor="@color/black"
            android:textSize="@dimen/_12sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="23 April 2023" />

        <androidx.cardview.widget.CardView
            android:id="@+id/sdfdsfds"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="@{onItemClick}"
            app:cardCornerRadius="@dimen/_10sdp"
            app:cardUseCompatPadding="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/date_txt">


            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/_12sdp"
                    android:paddingTop="@dimen/_12sdp"
                    android:paddingRight="@dimen/_12sdp"
                    android:paddingBottom="@dimen/_12sdp">


                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/textView7"
                                style="@style/AG_regular"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/purchase_from"
                                android:textColor="@color/color_A7AEB1"
                                android:textSize="@dimen/_12sdp" />


                            <TextView
                                android:id="@+id/textView11"
                                style="@style/Ag_metadata_500"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_4sdp"
                                android:text="@{item.purchasefrom}"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_12sdp"
                                tools:text="@string/app_name" />
                        </androidx.appcompat.widget.LinearLayoutCompat>

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_4sdp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/textView16"
                                style="@style/AG_regular"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/product_name"
                                android:textColor="@color/color_A7AEB1"
                                android:textSize="@dimen/_12sdp" />

                            <TextView
                                android:id="@+id/textView18"
                                style="@style/Ag_metadata_500"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_4sdp"
                                android:text="@{item.productname}"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_12sdp"
                                tools:text="@string/app_name" />

                        </androidx.appcompat.widget.LinearLayoutCompat>

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <androidx.appcompat.widget.LinearLayoutCompat
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.5"
                                android:orientation="vertical">

                                <androidx.appcompat.widget.LinearLayoutCompat
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_4sdp">

                                    <TextView
                                        android:id="@+id/textView22"
                                        style="@style/AG_regular"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Volume Points"
                                        android:textColor="@color/color_A7AEB1"
                                        android:textSize="@dimen/_12sdp" />

                                    <TextView
                                        android:id="@+id/textView20"
                                        style="@style/Ag_metadata_500"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="@dimen/_5sdp"
                                        android:text="@{String.valueOf(item.rewardpoints)}"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/_12sdp"
                                        tools:text="@string/app_name" />


                                </androidx.appcompat.widget.LinearLayoutCompat>

                                <androidx.appcompat.widget.LinearLayoutCompat
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/qunty_txt"
                                        style="@style/AG_regular"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/quantity"
                                        android:textColor="@color/color_A7AEB1"
                                        android:textSize="@dimen/_12sdp" />


                                    <TextView
                                        android:id="@+id/quantity_txt"
                                        style="@style/Ag_metadata_500"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="@dimen/_5sdp"
                                        android:text="@{item.quantity}"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/_12sdp"
                                        tools:text="@string/app_name" />


                                </androidx.appcompat.widget.LinearLayoutCompat>
                            </androidx.appcompat.widget.LinearLayoutCompat>

                            <com.google.android.material.button.MaterialButton
                                style="@style/AG_bold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:backgroundTint="@color/color_D1F6F6"
                                android:text="@{item.price}"
                                android:textColor="@color/primary"
                                android:textSize="@dimen/_12sdp"
                                app:cornerRadius="@dimen/_12sdp"
                                tools:text="00000" />
                        </androidx.appcompat.widget.LinearLayoutCompat>

                    </androidx.appcompat.widget.LinearLayoutCompat>


                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/textView8"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="@color/color_EFF1F4"
                        app:cardCornerRadius="@dimen/_10sdp"
                        app:cardElevation="0dp"
                        app:layout_constraintBottom_toBottomOf="@+id/textView20"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_weight="3"
                        app:layout_constraintStart_toEndOf="@+id/textView20"
                        app:layout_constraintTop_toTopOf="@+id/textView20">

                        <TextView
                            style="@style/AG_bold"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="@dimen/_5sdp"
                            android:text="@{item.price}"
                            android:textColor="@color/primary"
                            android:textSize="@dimen/_9sdp" />


                    </com.google.android.material.card.MaterialCardView>


                </androidx.appcompat.widget.LinearLayoutCompat>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_2sdp"
                    android:visibility="@{item.flavour_Applicable.equals(`Y`) ? View.VISIBLE : View.GONE}"
                    android:background="@color/color_EFF1F4"/>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/_12sdp"
                    android:paddingTop="@dimen/_5sdp"
                    android:paddingRight="@dimen/_12sdp"
                    android:visibility="@{item.flavour_Applicable.equals(`Y`) ? View.VISIBLE : View.GONE}"
                    android:paddingBottom="@dimen/_5sdp">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/flavour_ti"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_4sdp"
                        android:layout_weight="0.5"
                        android:drawableEnd="@drawable/ic_drop_down"
                        android:focusableInTouchMode="true"
                        android:hint="Flavour"
                        android:visibility="@{item.flavour_Applicable.equals(`Y`) ? View.VISIBLE : View.GONE}"
                        app:boxBackgroundMode="outline"
                        app:boxStrokeColor="@color/primary"
                        app:counterTextColor="@color/black"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">


                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/flavour_txt"
                            style="@style/AG_regular"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:clickable="false"
                            android:cursorVisible="false"
                            android:drawableEnd="@drawable/ic_drop_down"
                            android:drawablePadding="@dimen/_4sdp"
                            android:focusable="false"
                            android:onClick="@{onItemClick}"
                            android:text="@{item.setFlavourText(item.flavours)}"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_10sdp"
                            tools:text="Flavour" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/flavourcount"
                        style="@style/Ag_body_large"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginStart="@dimen/_25sdp"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:gravity="start"
                        android:onClick="@{onItemClick}"
                        android:text="@{item.setFlavourCountText(item.flavours)}"
                        android:textColor="@color/primary"
                        android:textSize="@dimen/_12ssp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/flavor_item"
                        tools:text="+ 5 flavours" />
                </androidx.appcompat.widget.LinearLayoutCompat>


            </androidx.appcompat.widget.LinearLayoutCompat>


        </androidx.cardview.widget.CardView>
    </androidx.appcompat.widget.LinearLayoutCompat>




</layout>