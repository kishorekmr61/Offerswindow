<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <data>

        <import type="android.view.View" />

        <variable
            name="item"
            type="com.customer.bms.model.stock.ProductsResponse" />

        <variable
            name="onItemClick"
            type="android.view.View.OnClickListener" />

        <import type="android.text.TextUtils" />
    </data>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_3sdp"
        android:orientation="vertical">


        <androidx.cardview.widget.CardView
            android:id="@+id/sdfdsfds"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="@{onItemClick}"
            app:cardCornerRadius="@dimen/_10sdp"
            app:cardUseCompatPadding="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/date_txt">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="@dimen/_8sdp"
                android:paddingTop="@dimen/_8sdp"
                android:paddingRight="@dimen/_8sdp"
                android:paddingBottom="@dimen/_8sdp">


                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <androidx.appcompat.widget.AppCompatImageView
                                loadUrl="@{item.product_Image_Path}"
                                android:layout_width="@dimen/_60sdp"
                                android:layout_height="@dimen/_60sdp"
                                android:layout_gravity="start|center" />
                        </androidx.appcompat.widget.LinearLayoutCompat>

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_8sdp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/productname"
                                style="@style/Ag_metadata"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_4sdp"
                                android:text="@{item.product_Desc}"
                                android:textColor="@color/light_black"
                                android:textSize="@dimen/_12sdp"
                                tools:text="Product xyz" />

                            <TextView
                                android:id="@+id/unitprice"
                                style="@style/AG_regular"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_4sdp"
                                android:layout_marginTop="@dimen/_4sdp"
                                android:textColor="@color/light_black"
                                android:textSize="@dimen/_10sdp"
                                tools:text="Unit price  : 10" />
                        </androidx.appcompat.widget.LinearLayoutCompat>

                    </androidx.appcompat.widget.LinearLayoutCompat>


                    <TextView
                        android:id="@+id/instock"
                        style="@style/AG_regular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_4sdp"
                        android:gravity="bottom"
                        android:text="In Stock"
                        android:textColor="@color/primary"
                        android:textSize="@dimen/_12sdp"
                        android:visibility="gone" />


                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5">

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/qty_ti"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/_4sdp"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:layout_marginEnd="@dimen/_4sdp"
                            android:layout_weight="0.5"
                            android:drawableEnd="@drawable/ic_drop_down"
                            android:focusableInTouchMode="true"
                            android:hint="Quantity"
                            app:boxBackgroundMode="outline"
                            app:boxStrokeColor="@color/primary"
                            app:counterTextColor="@color/black"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">


                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/qty_txt"
                                style="@style/AG_regular"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/_4sdp"
                                android:drawableEnd="@drawable/ic_drop_down"
                                android:enabled="@{item.allowqty}"
                                android:imeOptions="actionDone"
                                android:inputType="number"
                                android:onClick="@{onItemClick}"
                                android:text="@={item.add}"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_10sdp" />
                        </com.google.android.material.textfield.TextInputLayout>

                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:orientation="vertical">

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_4sdp"
                            android:layout_weight="0.5">

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/flavour_ti"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/_4sdp"
                                android:layout_weight="0.5"
                                android:drawableEnd="@drawable/ic_drop_down"
                                android:focusableInTouchMode="true"
                                android:hint="Flavour"
                                android:visibility="@{item.flavour_Applicable.equals(`Y`) ? View.VISIBLE : View.GONE}"
                                app:boxBackgroundMode="outline"
                                app:boxStrokeColor="@color/primary"
                                app:counterTextColor="@color/black"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                tools:visibility="visible">


                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/flavour_txt"
                                    style="@style/AG_regular"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:clickable="false"
                                    android:cursorVisible="false"
                                    android:drawableEnd="@drawable/ic_drop_down"
                                    android:drawablePadding="@dimen/_4sdp"
                                    android:focusable="false"
                                    android:includeFontPadding="false"
                                    android:onClick="@{onItemClick}"
                                    android:text="@{item.setFlavourText()}"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_10sdp"
                                    tools:text="Flavour" />
                            </com.google.android.material.textfield.TextInputLayout>

                        </androidx.appcompat.widget.LinearLayoutCompat>

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/flavourcount"
                            style="@style/Ag_body_large"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:layout_marginStart="@dimen/_25sdp"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:gravity="start"
                            android:onClick="@{onItemClick}"
                            android:text="@{item.setFlavourCountText()}"
                            android:textColor="@color/primary"
                            android:textSize="@dimen/_12ssp"
                            android:visibility="@{TextUtils.isEmpty(item.setFlavourCountText()) ? View.GONE : View.VISIBLE}"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/flavor_item"
                            tools:text="+ 5 flavours"
                            tools:visibility="gone" />
                    </androidx.appcompat.widget.LinearLayoutCompat>


                </androidx.appcompat.widget.LinearLayoutCompat>
            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.cardview.widget.CardView>
    </androidx.appcompat.widget.LinearLayoutCompat>


</layout>