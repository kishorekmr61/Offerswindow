<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="item"
            type="com.customer.offerswindow.model.closuregroups.ChatData" />

        <variable
            name="onItemClick"
            type="android.view.View.OnClickListener" />

        <import type="android.view.View" />

        <import type="android.text.TextUtils" />

    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_9sdp">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/date"
            style="@style/AG_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:text="@{item.setChatDate(item.created_Date)}"
            android:textColor="@color/primary"
            android:textSize="@dimen/_10sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="12 April 2023" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_4sdp"
            android:background="@drawable/backgroundgreen"
            android:backgroundTint="@color/white"
            android:paddingStart="@dimen/_8sdp"
            android:paddingRight="@dimen/_12sdp"
            android:paddingBottom="@dimen/_2sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/date">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/messageview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/_6sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/name_txt"
                    style="@style/AG_bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/_4sdp"
                    android:text="@{item.Created_By}"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10ssp"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="TTTTTTTTTTT"
                    tools:visibility="visible" />

                <TextView
                    android:id="@+id/textView27"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:clickable="@{TextUtils.isEmpty(item.chat_Text) ? false : item.isValidUrl(item.chat_Text)}"
                    android:fontFamily="@font/rubik"
                    android:onClick="@{onItemClick}"
                    android:text="@{item.chat_Text}"
                    android:textColor="@{TextUtils.isEmpty(item.chat_Text) ?  @color/black : item.isValidUrl(item.chat_Text) ? @color/color_2B83ED : @color/black}"
                    android:textSize="@dimen/_12ssp"
                    android:visibility="@{item.post_Type.equals(`Text`) ? View.VISIBLE : View.GONE}"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/name_txt"
                    tools:text="TTTTTTTTsdsddsdsdsdsdsdsdsdsdsdsddssdsddsdsdsdsdsdTTT"
                    tools:visibility="visible" />


                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/chat_img"
                    loadUrl="@{item.chat_Text}"
                    android:layout_width="@dimen/_185sdp"
                    android:layout_height="@dimen/_185sdp"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:onClick="@{onItemClick}"
                    android:scaleType="centerCrop"
                    android:visibility="@{item.post_Type.equals(`Image`) || item.post_Type.equals(`Video`) ? View.VISIBLE : View.GONE}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/name_txt"
                    tools:src="@drawable/ic_stock_balances"
                    tools:visibility="gone" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/chat_video"
                    setThumbnail="@{item.chat_Text}"
                    android:layout_width="@dimen/_185sdp"
                    android:layout_height="@dimen/_185sdp"
                    android:onClick="@{onItemClick}"
                    android:visibility="@{item.post_Type.equals(`Video`) ? View.VISIBLE : View.GONE}"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/name_txt"
                    tools:src="@drawable/ic_stock_balances"
                    tools:visibility="gone" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/chat_video_thumb"
                    android:layout_width="@dimen/_45sdp"
                    android:layout_height="@dimen/_45sdp"
                    android:onClick="@{onItemClick}"
                    android:src="@drawable/play"
                    android:tint="@color/white"
                    android:visibility="@{item.post_Type.equals(`Video`) ? View.VISIBLE : View.GONE}"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/name_txt"
                    tools:visibility="gone" />


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/audio_img"
                    style="@style/AG_bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/record_voice"
                    android:drawablePadding="@dimen/_14ssp"
                    android:gravity="center"
                    android:onClick="@{onItemClick}"
                    android:scaleType="centerCrop"
                    android:src="@drawable/record_voice"
                    android:text=""
                    android:textSize="@dimen/_14ssp"
                    android:visibility="@{item.post_Type.equals(`Voice`) ? View.VISIBLE : View.GONE}"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/name_txt"
                    tools:src="@drawable/record_voice"
                    tools:visibility="gone" />


            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/time_txt"
                style="@style/AG_bold"
                setTextviewChat="@{item.created_Date}"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_3sdp"
                android:textColor="@color/black"
                android:textSize="@dimen/_10ssp"
                app:layout_constraintBottom_toBottomOf="@+id/read_img"
                app:layout_constraintEnd_toStartOf="@id/read_img"
                tools:text="02:35" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/read_img"
                android:layout_width="@dimen/_10sdp"
                android:layout_height="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_2sdp"
                android:src="@{item.Read_Status.equals(`Read`) ? @drawable/ic_double_tick : @drawable/ic_double_tick_gray}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/messageview"
                tools:src="@drawable/ic_double_tick_gray" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.15" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>