<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="onItemClick"
            type="android.view.View.OnClickListener" />

        <variable
            name="item"
            type="com.customer.bms.model.stock.FlavoursData" />

    </data>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_2sdp"
        android:orientation="horizontal">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/flavour_lyout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:background="@color/color_EFF1F4"
            android:elevation="0dp"
            android:onClick="@{onItemClick}"
            android:orientation="horizontal"
            app:cardCornerRadius="@dimen/_8sdp"
            app:contentPadding="@dimen/_5sdp">

            <TextView
                android:id="@+id/customernamelbl_txt"
                style="@style/AG_regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|start"
                android:gravity="center|start"
                android:padding="@dimen/_5sdp"
                android:text="@={item.flavour_Desc}"
                android:textColor="@color/black"
                android:textSize="@dimen/_10ssp"
                tools:text="Customer Name" />


        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/_3sdp"
            android:layout_weight="0.3"
            android:background="@color/color_EFF1F4"
            android:gravity="center"
            android:orientation="horizontal">


            <TextView
                style="@style/Ag_body_large"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="0.6"
                android:gravity="center"
                android:text="@{item.qty}"
                android:textColor="@color/black"
                android:textSize="@dimen/_10ssp"
                tools:text="23" />


        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.appcompat.widget.LinearLayoutCompat>
</layout>