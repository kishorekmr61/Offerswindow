<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="item"
            type="com.customer.offerswindow.model.myprogram.MyProgramdata" />

        <variable
            name="onItemClick"
            type="android.view.View.OnClickListener" />

        <import type="android.view.View" />

        <import type="androidx.core.content.ContextCompat" />
    </data>

    <androidx.cardview.widget.CardView
        android:id="@+id/sdfdsfds"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_10sdp"
        app:cardUseCompatPadding="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_4sdp"
            android:orientation="horizontal"
            android:paddingStart="@dimen/_8sdp"
            android:paddingTop="@dimen/_8sdp"
            android:paddingRight="@dimen/_8sdp">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:orientation="horizontal">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:layout_weight="0.7"
                    android:orientation="vertical">


                    <TextView
                        style="@style/Ag_metadata"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{item.program_Name}"
                        android:textColor="@color/light_black"
                        tools:text="@string/product_category"
                        android:textSize="@dimen/_10ssp" />

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/datetimelbl_txt"
                            style="@style/AG_regular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Date &amp; Time  :"
                            android:textColor="@color/color_A7AEB1"
                            android:textSize="@dimen/_10ssp" />

                        <TextView
                            android:id="@+id/datetime_txt"
                            style="@style/AG_regular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{item.convertTime()}"
                            android:textColor="@color/light_black"
                            android:textSize="@dimen/_10ssp" />

                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <androidx.appcompat.widget.AppCompatTextView
                            style="@style/AG_regular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="0.5"
                            android:drawablePadding="@dimen/_4sdp"
                            android:text="@{item.Program_Mode_Desc}"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_10ssp"
                            android:drawableStart="@{item.program_Mode_Desc.equals(`Physical`) ? @drawable/dot :@drawable/greendot}"
                            tools:text="Physical" />

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right|center|end"
                            android:layout_weight="0.5"
                            android:gravity="right|center"
                            android:orientation="horizontal">


                            <TextView
                                android:id="@+id/connect_btn"
                                style="@style/AG_regular"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:background="@{item.program_Mode_Code.equals(`8`) ? @drawable/primary_bg : @drawable/blue_bg}"
                                android:drawableEnd="@{item.program_Mode_Code.equals(`8`) ? @drawable/programrightarrow :null}"
                                android:drawablePadding="@dimen/_2sdp"
                                android:gravity="center"
                                android:onClick="@{onItemClick}"
                                android:padding="@dimen/_4sdp"
                                android:paddingEnd="@dimen/_5sdp"
                                android:text="@{item.program_Mode_Code.equals(`8`) ? @string/join :@string/scanqr}"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_10ssp"
                                tools:background="@drawable/blue_bg"
                                tools:drawableEnd="@drawable/programrightarrow"
                                tools:text="@string/scanqr" />

                        </androidx.appcompat.widget.LinearLayoutCompat>
                    </androidx.appcompat.widget.LinearLayoutCompat>
                </androidx.appcompat.widget.LinearLayoutCompat>


            </androidx.appcompat.widget.LinearLayoutCompat>


        </androidx.appcompat.widget.LinearLayoutCompat>


    </androidx.cardview.widget.CardView>

</layout>