<resources>
    <!-- Base application theme. -->
    <style name="Theme.OfferWindow" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary_red</item>
        <item name="colorSecondaryVariant">@color/secondary_red</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="actionMenuTextColor">@color/black</item>
        <item name="actionMenuTextAppearance">@style/MyMenuTextAppearance</item>
        <item name="textAllCaps">false</item>
        <!-- Status bar color. -->
        <!-- Customize your theme here. -->
        <item name="android:listDivider">@color/color_A7AEB1</item>
        <item name="snackbarStyle">@style/MySnackbar</item>

    </style>

    <style name="MySnackbar" parent="Widget.MaterialComponents.Snackbar">
        <item name="android:layout_margin">28dp</item>
    </style>

    <style name="MyMenuTextAppearance" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Menu">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textColor">@color/black</item>
        <item name="singleLine">true</item>
    </style>

    <style name="Theme.OfferWindow.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.OneApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.OneApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="AG_regular">
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="singleLine">true</item>
    </style>

    <style name="AG_bold">
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="singleLine">true</item>
    </style>

    <style name="AG_altbold">
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="singleLine">true</item>
    </style>


    <style name="Ag_metadata_500">
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:fontFamily">@font/poppins_black</item>
        <item name="android:textColor">@color/black</item>
        <item name="singleLine">true</item>
    </style>

    <style name="Ag_h4">
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="singleLine">true</item>
    </style>

    <style name="Ag_body_small">
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textColor">@color/black</item>
        <item name="singleLine">true</item>
    </style>

    <style name="Ag_metadata">
        <item name="android:textSize">@dimen/_8ssp</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="singleLine">true</item>
    </style>

    <style name="Ag_body">
        <!--                        <item name="android:textSize">@dimen/_14ssp</item>-->
        <item name="android:textSize">@dimen/_13ssp
        </item><!--Font size as per the latest figma v9-->
        <item name="android:fontFamily">@font/poppins</item>
        <item name="singleLine">true</item>
    </style>

    <style name="Ag_h3">
        <item name="android:textSize">@dimen/_20ssp</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="singleLine">true</item>
    </style>

    <style name="Ag_body_copy_small">
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textColor">@color/black</item>
        <item name="singleLine">true</item>
    </style>

    <style name="outer_MarginLeft_For_Home_Card">
        <item name="layout_constraintGuide_begin">15dp</item>
    </style>

    <style name="outer_MarginRight_For_Home_Card">
        <item name="layout_constraintGuide_end">15dp</item>
    </style>

    <style name="Ag_body_large">
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="singleLine">true</item>
    </style>

    <style name="Ag_label">
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="singleLine">true</item>
    </style>

    <style name="pull_bar">
        <item name="android:layout_width">@dimen/_40sdp</item>
        <item name="android:layout_height">@dimen/_2sdp</item>
        <item name="android:background">@color/color_CCCCCC</item>
        <item name="android:layout_marginTop">@dimen/_8sdp</item>

    </style>

    <style name="CustomChipChoice" parent="@style/Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@drawable/background_color_chip_state_list</item>
        <item name="android:textColor">@drawable/text_color_chip_state_list</item>
    </style>

    <style name="My_Widget.MaterialComponents.Chip.Choice" parent="Widget.MaterialComponents.Chip.Choice">
        <!-- Chip background color selector -->
        <item name="chipBackgroundColor">@drawable/background_color_chip_state_list</item>
        <!-- Border color -->
        <item name="chipStrokeColor">@color/car_grey_600</item>

        <!-- Chip text color selector -->
        <item name="android:textColor">@color/mtrl_choice_chip_text_color</item>
    </style>
</resources>