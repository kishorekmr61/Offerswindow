<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="OtpTextView">
        <attr name="android:textColor" />
        <attr name="otp" format="string" />
        <attr name="hide_otp" format="boolean" />
        <attr name="hide_otp_drawable" format="reference" />
        <attr name="length" format="integer" />
        <attr name="width" format="dimension" />
        <attr name="height" format="dimension" />
        <attr name="box_margin" format="dimension" />
        <attr name="box_margin_left" format="dimension" />
        <attr name="box_margin_right" format="dimension" />
        <attr name="box_margin_top" format="dimension" />
        <attr name="box_margin_bottom" format="dimension" />
        <attr name="bar_height" format="dimension" />
        <attr name="bar_enabled" format="boolean" />
        <attr name="otp_box_background" format="reference" />
        <attr name="otp_box_background_active" format="reference" />
        <attr name="otp_box_background_inactive" format="reference" />
        <attr name="otp_box_background_success" format="reference" />
        <attr name="otp_box_background_error" format="reference" />
        <attr name="bar_margin" format="dimension" />
        <attr name="bar_margin_bottom" format="dimension" />
        <attr name="bar_margin_right" format="dimension" />
        <attr name="bar_margin_left" format="dimension" />
        <attr name="bar_margin_top" format="dimension" />
        <attr name="otp_text_size" format="dimension" />
        <attr name="bar_active_color" format="color" />
        <attr name="bar_inactive_color" format="color" />
        <attr name="bar_error_color" format="color" />
        <attr name="bar_success_color" format="color" />
        <attr name="text_typeface" format="string" />
    </declare-styleable>


    <!-- Style attrs for Stories ProgressBar-->
    <declare-styleable name="StoriesProgressView">
        <attr name="progressCount" format="integer|reference" />
    </declare-styleable>

    <attr name="dotsColor" format="color" />
    <attr name="selectedDotColor" format="color" />
    <attr name="dotsStrokeColor" format="color" />
    <attr name="dotsSize" format="dimension" />
    <attr name="dotsWidthFactor" format="float" />
    <attr name="dotsSpacing" format="dimension" />
    <attr name="dotsCornerRadius" format="dimension" />
    <attr name="dotsStrokeWidth" format="dimension" />
    <attr name="stiffness" format="float" />
    <attr name="dampingRatio" format="float" />
    <attr name="progressMode" format="boolean" />
    <attr name="dotsClickable" format="boolean" />

    <declare-styleable name="DotsIndicator">
        <attr name="dotsColor" />
        <attr name="selectedDotColor" />
        <attr name="dotsSize" />
        <attr name="dotsWidthFactor" />
        <attr name="dotsSpacing" />
        <attr name="dotsCornerRadius" />
        <attr name="progressMode" />
        <attr name="dotsClickable" />
        <attr name="dotsElevation" format="dimension" />
    </declare-styleable>

    <declare-styleable name="SpringDotsIndicator">
        <attr name="dotsColor" />
        <attr name="dotsSize" />
        <attr name="dotsSpacing" />
        <attr name="dotsCornerRadius" />
        <attr name="dotsStrokeWidth" />
        <attr name="dotsStrokeColor" />
        <attr name="stiffness" />
        <attr name="dampingRatio" />
        <attr name="dotsClickable" />
    </declare-styleable>

    <declare-styleable name="WormDotsIndicator">
        <attr name="dotsColor" />
        <attr name="dotsSize" />
        <attr name="dotsSpacing" />
        <attr name="dotsCornerRadius" />
        <attr name="dotsStrokeWidth" />
        <attr name="dotsStrokeColor" />
        <attr name="dotsClickable" />
    </declare-styleable>

    <declare-styleable name="cs_CircularSeekBar">
        <attr name="cs_circle_style">
            <enum name="butt" value="0" />
            <enum name="round" value="1" />
            <enum name="square" value="2" />
        </attr>
        <attr name="cs_progress" format="integer" />
        <attr name="cs_max" format="integer" />
        <attr name="cs_negative_enabled" format="boolean" />
        <attr name="cs_move_outside_circle" format="boolean" />
        <attr name="cs_maintain_equal_circle" format="boolean" />
        <attr name="cs_use_custom_radii" format="boolean" />
        <attr name="cs_lock_enabled" format="boolean" />
        <attr name="cs_circle_x_radius" format="dimension" />
        <attr name="cs_circle_y_radius" format="dimension" />
        <attr name="cs_circle_stroke_width" format="dimension" />
        <attr name="cs_disable_pointer" format="boolean" />
        <attr name="cs_pointer_stroke_width" format="dimension" />
        <attr name="cs_pointer_halo_width" format="dimension" />
        <attr name="cs_pointer_halo_border_width" format="dimension" />
        <attr name="cs_circle_fill" format="color" />
        <attr name="cs_circle_color" format="color" />
        <attr name="cs_circle_progress_color" format="color" />
        <attr name="cs_pointer_color" format="color" />
        <attr name="cs_pointer_halo_color" format="color" />
        <attr name="cs_pointer_halo_color_ontouch" format="color" />
        <attr name="cs_pointer_alpha_ontouch" format="integer" />
        <attr name="cs_pointer_angle" format="float" />
        <attr name="cs_start_angle" format="float" />
        <attr name="cs_end_angle" format="float" />
        <attr name="cs_disable_progress_glow" format="boolean" />
        <attr name="cs_hide_progress_when_empty" format="boolean" />
    </declare-styleable>

</resources>